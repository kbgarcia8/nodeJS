<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header class="new-message-page">
    <%- include("partials/errors.ejs") %>
    <% if(user.status_code === 3) { %>
      <%- include('partials/navbar2.ejs', {links: memberAuthenticatedLinks}) %>
    <% } else if (user.status_code === 2) { %>
      <%- include('partials/navbar2.ejs', {links: guestAuthenticatedLinks}) %>
    <% } else if (user.status_code === 1) { %>
      <%- include('partials/navbar2.ejs', {links: adminAuthenticatedLinks}) %>
    <% } %>
    <h1 class="page-header"><%= header %></h1>
  </header>
  <main class="new-message-page">
    <p class="new-message-instructions">A message, a dedication or just say yout mind out loud! ğŸª§</p>
    <form class="new-message" action="/messages/new" method="POST">
        <div class="input-container new-message-input">
          <label for="newMessageTitle">Title: </label>
          <input id="newMessageTitle" name="newMessageTitle" placeholder="Message Title" type="text" />
        </div>
        <div class="input-container new-message-input2">
          <label for="newMessageText">Message: </label>
          <textarea id="newMessageText" name="newMessageText" placeholder="Message" rows="10" cols="45"></textarea>
        </div>
        <div class="new-message-submit-button-space">
          <button type="submit" class="new-message-page-submit">Post</button>
        </div>
    </form>
  </main>
</body>
</html>