<!--
Example of cascading forms, where first form must be submitted since there are elements in the second form dependent on it.
Since value submitted from the first form is also needed when second form is submitted a hidden input is used
-->
<form action="/products" method="POST">
    <label for="sorter">Search by:</label>
    <select id="sorter" name="sorter">
        <option value="All" <%= selectedSorter === "All" ? 'selected' : '' %>>All</option>
        <% sorter.map((sort) => { %>
            <option value="<%= sort %>"  <%= selectedSorter === sort ? 'selected' : '' %>><%= sort %></option>
        <% }); %>
    </select>
    <button type="submit">Select</button>
</form>
<form action="/products/filtered" method="GET">
    <input type="hidden" name="sorter" value="<%= selectedSorter %>">
    <label for="searcher">Search Pattern by <%= selectedSorter %>:</label>
    <select id="searcher" name="searcher">
        <option value=""  <%= searchPattern === "" ? 'selected' : '' %>>-- No Pattern Selected --</option>
    <% searcher.map((search) => { %>
        <option value="<%= search %>"  <%= searchPattern === search ? 'selected' : '' %>><%= search %></option>
    <% }); %>
    </select>
    <button type="submit">Search</button>
</form>