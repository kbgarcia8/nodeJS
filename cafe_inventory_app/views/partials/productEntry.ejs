 <div class="product-list-entry">
    <div class="product-info">
        <p class="product-info-title">Product Name: <%= product.name %></p>
        <p class="product-info-p">Product Code: <%= product.code %></p>
        <p class="product-info-p">Product Status: <%= product.status_name %></p>
        <p class="product-info-p">Product Category: <%= product.category_name %></p>
    </div>
    <form class="button-only" action="/products/edit/<%= product.id %>" method="GET">
        <button class="edit-product" type="submit" data-id="<%= product.id %>">Edit</button>
    </form>
</div>