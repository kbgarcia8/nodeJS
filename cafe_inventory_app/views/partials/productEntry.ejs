 <div class="product-list-entry">
    <div class="product-info">
        <p class="product-info-title">Product Name: <%= product.name %></p>
        <p class="product-info-p">Product Code: <%= product.code %></p>
        <p class="product-info-p">Product Status: <%= product.status_name %></p>
        <p class="product-info-p">Product Category: <%= product.category_name || product.category  %></p>
        <p class="product-info-p">Product <%= product.small === null ? 'Solo' : 'Small' %> Price: <%= product.small === null ? product.solo : product.small %></p>
        <p class="product-info-p">Product <%= product.large === null ? 'For Share' : 'Large' %> Price: <%= product.large === null ? product.for_share : product.large %></p>
    </div>
    <form class="button-only" action="/products/edit/<%= product.id %>" method="GET">
        <button class="edit-button" type="submit" data-id="<%= product.id %>">Edit</button>
    </form>
    <form class="button-only-submit" action="/products/delete/<%= product.id %>" method="POST">
        <button class="delete-button" type="submit" onclick="return confirm('This product will be erased from database permanently, proceed?');">Delete</button>
    </form>
</div>