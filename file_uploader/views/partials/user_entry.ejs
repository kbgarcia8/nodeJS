<div class="user-entry">
    <div class="user-entry-header">
        <h3 class="user-entry-name"><%= user.first_name %> <%= user.last_name %></h3>
        <h5 class="user-entry-username-and-email">@<%= user.username %> (<%= user.email %>)</h5>
    </div>
        <div class="user-entry-main-info">
            <p class="user-entry-membership"><b>Member Type: </b>  <%= user.role %></p>
            <% if (isAdmin === true) { %>
                <div class="user-entry-button-space">
                    <form class="button-only" action="/users/update/<%= user.id %>" method="GET">
                        <button class="open-user" type="submit">Update</button>
                    </form>
                    <form class="button-only" action="/users/delete/<%= user.id %>" data-id="<%= user.id %>" method="POST">
                        <button class="open-user" type="submit" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                    </form>
                </div>
            <% } %>
        </div>
    <p class="user-entry-date-added"><b>Date created/registered: </b> <%= user.created_at %></p>
</div>