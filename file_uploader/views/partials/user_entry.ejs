<div class="user-entry">
    <div class="user-entry-header">
        <h3 class="user-entry-name"><%= user.first_name %> <%= user.last_name %></h3>
        <h5 class="user-entry-username-and-email">@<%= user.username %> (<%= user.email %>)</h5>
    </div>
        <div class="user-entry-main-info">
            <p class="user-entry-membership"><b>Membership Type: </b>  <%= user.membership === 1 ? 'Admin' : user.membership === 2 ? 'Guest' : 'Member' %></p>
            <!--For improvement to grant this only on users owned by the user with 'Member' membership and all users by 'Admin' user-->
            <% if (user.username === user.username && isAdmin === true) { %>
                <div class="user-entry-button-space">
                    <form class="button-only" action="/users/update/<%= user.user_id %>" method="GET">
                        <button class="open-user" type="submit">Update</button>
                    </form>
                    <form class="button-only" action="/users/delete/<%= user.user_id %>" data-id="<%= user.user_id %>" method="POST">
                        <button class="open-user" type="submit" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                    </form>
                </div>
            <% } %>
        </div>
    <p class="user-entry-date-added"><b>Date created/registered: </b> <%= user.created_at_formatted %></p>
</div>