<div class="folder-entry">
    <div class="folder-entry-folder-info">
        <h3 class="folder-entry-title"><%= folder.name %></h3>
        <h4 class="folder-entry-file-quantity"><%= folder.files.length %> file(s)</h4>
        <div class="folder-entry-folder-icon-container">
            <img src="/folder.png" alt="folder-entry-icon">
        </div>
        <% if (folder.user.username === user.username) { %>
            <div class="folder-entry-button-space">
                <form class="button-only" action="/folders/view/<%= folder.name %>" data-id="<%= folder.name %>" method="GET">
                    <button class="open-folder" type="submit" >
                        <span class="view-text">View Files</span>
                    </button>
                </form>
                <form class="button-only" action="/folders/delete/<%= folder.id %>" data-id="<%= folder.id %>" method="GET">
                    <button class="delete-folder" type="submit" onclick="return confirm('Are you sure you want to delete this folder? All files in it will also be deleted');">Delete Folder</button>
                </form>
            </div>
        <% } %>
    </div>
    <p class="folder-entry-owner"><b>Folder owner: </b> <%= folder.user.username %></p>
    <p class="folder-entry-date-created"><b>Date created: </b> <%= folder.created_at %></p>
</div>