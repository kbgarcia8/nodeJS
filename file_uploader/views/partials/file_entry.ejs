<div class="file-entry">
    <div class="file-entry-file-info">
        <h3 class="file-entry-title"><%= file.name %></h3>
        <h6 class="file-entry-size-and-type"><%= (file.size / 1024 / 1024).toFixed(3) %>MB (<%= file.fileType %>)</h6>
        <% if (file.user.username === user.username) { %>
            <div class="file-entry-button-space">
                <form class="button-only" action="/files/view/<%= file.id %>" data-id="<%= file.id %>" method="GET">
                    <button class="open-file" type="submit" >
                        <span class="view-text">View</span>
                        <span class="view-icon"><%= Object.entries(icons).find(([key]) => file.fileType.includes(key))?.[1] %></span>
                    </button>
                </form>
                <form class="button-only" action="/files/delete/<%= file.id %>" data-id="<%= file.id %>" method="GET">
                    <button class="delete-file" type="submit" onclick="return confirm('Are you sure you want to delete this file?');">Delete</button>
                </form>
            </div>
        <% } %>
    </div>
    <p class="file-entry-date-uploaded"><b>Date uploaded: </b> <%= file.uploaded_at %></p>
    <p class="file-entry-owner"><b>File owner: </b> <%= file.user.username %></p>
    <p class="file-entry-folder"><b>File location: </b> <%= file.folder_name %></p>
</div>