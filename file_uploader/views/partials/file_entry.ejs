<div class="file-entry">
    <div class="file-entry-header">
        <h3 class="file-entry-title"><%= file.title %></h3>
        <h6 class="file-entry-username-and-email">@<%= file.username %> (<%= file.email %>)</h6>
        <!--For improvement to grant this only on files owned by the user with 'Member' membership and all files by 'Admin' user-->
        <% if (file.username === user.username) { %>
            <div class="file-entry-button-space">
                <% if (editable === true) { %>
                    <form class="button-only" action="/files/edit/<%= file.file_id %>" method="GET">
                        <button class="open-file" type="submit">Edit</button>
                    </form>
                <% } %>
                <form class="button-only" action="/files/delete/<%= file.file_id %>" data-id="<%= file.file_id %>" method="POST">
                    <button class="open-file" type="submit" onclick="return confirm('Are you sure you want to delete this file?');">Delete</button>
                </form>
            </div>
        <% } %>
    </div>
    <p class="file-entry-text"><%= file.file %></p>
    <p class="file-entry-date-added"><b>Date added: </b> <%= file.created_at_formatted %></p>
</div>