<div class="file-entry">
    <div class="file-entry-header">
        <h3 class="file-entry-title"><%= file.name %></h3>
        <h6 class="file-entry-size-and-type">@<%= file.size %> (<%= file.fileType %>)</h6>
        <% if (file.user.username === user.username) { %>
            <div class="file-entry-button-space">
                <form class="button-only" action="/files/delete/<%= file.file_id %>" data-id="<%= file.id %>" method="POST">
                    <button class="open-file" type="submit" onclick="return confirm('Are you sure you want to delete this file?');">Delete</button>
                </form>
            </div>
        <% } %>
    </div>
    <p class="file-entry-date-added"><b>Date added: </b> <%= file.uploaded_at %></p>
</div>