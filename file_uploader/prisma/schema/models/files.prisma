model File {
    id Int @id @default(autoincrement())
    user User @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId Int
    uploaded_at DateTime @default(now())
    folder Folder @relation(fields: [folderId], references: [id], onDelete: Cascade) //should be equivalent to req.file.destination
    folderId Int
    fileType String
    name String //req.file.filename
    path String //req.file.path
    size Int
    privacy Privacy @default(PUBLIC)

    @@schema("file_uploader")
}