<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include("partials/errors.ejs") %>
  <%- include('navbar', {links: links}) %>
  <h1><%= title %></h1>
  <div class="user-list-space">
    <ul class="user-list">
      <% if (users && users.length > 0) {%>
        <% users.forEach(function(user) { %>
          <li class="user-entry">
            <p class="user-id">ID: <%= user.id %></p>
            <p class="user-name">Username: <%= user.username %></p>
            <p class="user-email">Email: <%= user.email %></p>
            <form class="button-only" action="/users/<%= user.id %>/update" method="GET">
              <button class="update-user" type="submit">Update</button>
            </form>
            <form class="button-only" action="/users/<%= user.id %>/delete" method="POST">
              <button class="delete-user" type="submit" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
            </form>
          </li>          
        <% }); %>
      <% } %>
    </ul>
  </div>
</body>
</html>
