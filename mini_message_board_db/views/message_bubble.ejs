<div class="message-bubble">
    <div class="message-bubble-header">
        <h3 class="username"><%= user %></h3>
        <button class="open-message" type="button" data-index="<%= index %>">Open</button>
    </div>    
    <p class="text-message"><%= message %></p>
    <p class="user-email">Email: <%= email %></p>
    <p class="date-added">Date added: <%= date %></p>
</div>